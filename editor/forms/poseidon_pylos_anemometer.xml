        <sml:IdentifierList>
               <!-- mandatory automated -->
               <sml:identifier>
                <sml:Term definition="http://www.ifremer.fr/tematres/vocab/index.php?tema=66">
                    <sml:label>uuid</sml:label>
                    <sml:value>ed74b62f-a0bc-40b9-84eb-874653d8de0e</sml:value>
                </sml:Term>                   
               </sml:identifier>                                       
        </sml:IdentifierList>
    </sml:identification>
    <sml:classification>
        <sml:ClassifierList>
            <sml:classifier>
                <sml:Term definition="http://www.ifremer.fr/tematres/vocab/index.php?tema=134">
                    <sml:label>transmission mode</sml:label>
                    <sml:codeSpace xlink:href="http://www.ifremer.fr/tematres/vocab/index.php?tema=136"/>
                    <sml:value>real time</sml:value>                    
                </sml:Term>
            </sml:classifier>
            <sml:classifier>
                <sml:Term definition="http://www.ifremer.fr/tematres/vocab/index.php?tema=140">                    
                    <sml:label>deployment status</sml:label>
                    <sml:codeSpace xlink:href="http://www.ifremer.fr/tematres/vocab/index.php?tema=141"/>
                    <sml:value>installedNominal</sml:value>
                </sml:Term>
            </sml:classifier>
            
        </sml:ClassifierList>
        
    </sml:classification>
    
    <!-- ++++++++++++++++++++++++++++++++++++++++++++++++ -->
    <!--                  Contacts                        -->
    <!-- ++++++++++++++++++++++++++++++++++++++++++++++++ -->
    <sml:contacts>
        <sml:ContactList>
            <!-- owner -->
            <sml:contact>
                <gmd:CI_ResponsibleParty>
                    <gmd:organisationName>
                        <gco:CharacterString>HCMR</gco:CharacterString>
                    </gmd:organisationName>
                    <gmd:contactInfo>
                        <gmd:CI_Contact>
                            <gmd:onlineResource xlink:href="http://www.hcmr.gr/en/"></gmd:onlineResource>
                        </gmd:CI_Contact>
                    </gmd:contactInfo>
                    <gmd:role><gmd:CI_RoleCode codeList="http://www.ifremer.fr/tematres/vocab/index.php?tema=67" codeListValue="owner"></gmd:CI_RoleCode></gmd:role>
                </gmd:CI_ResponsibleParty>
            </sml:contact>
            <!-- principal investigator -->
            <sml:contact>
                <gmd:CI_ResponsibleParty>
                    <gmd:individualName>
                        <gco:CharacterString>Leonidas Perivoliotis</gco:CharacterString>
                    </gmd:individualName>
                    <gmd:contactInfo>
                        <gmd:CI_Contact>
                            <gmd:address>
                                <gmd:CI_Address>
                                    <gmd:electronicMailAddress><gco:CharacterString>lperiv@hcmr.gr</gco:CharacterString></gmd:electronicMailAddress>
                                </gmd:CI_Address>
                            </gmd:address>
                        </gmd:CI_Contact>
                    </gmd:contactInfo>
                    <gmd:role><gmd:CI_RoleCode codeList="http://www.ifremer.fr/tematres/vocab/index.php?tema=67" codeListValue="principal investigator"></gmd:CI_RoleCode></gmd:role>
                </gmd:CI_ResponsibleParty>
            </sml:contact>
        </sml:ContactList>
    </sml:contacts>
           
    <sml:history>
        <sml:EventList>
            <sml:event>
                <!---+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
                <!-- Event may be optionnally typed according to the list available at:               -->
                <!-- http://www.ifremer.fr/tematres/vocab/index.php?tema=87&/system-event             -->
                <!-- when it is typed, the reference is stored in @definition                         -->
                <!-- the related label is used in attribute @gml:id                                   -->
                <!---+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
                <sml:Event>
                <swe:description>deployement</swe:description>                
                    <sml:time><gml:TimeInstant gml:id="eventTime-1">
                    <gml:timePosition>2000</gml:timePosition>
                </gml:TimeInstant>
                    </sml:time>                
            </sml:Event>
            </sml:event>
            <sml:event>
                <sml:Event  definition="http://www.ifremer.fr/tematres/vocab/index.php?tema=90">
                    <swe:description>initial deployment</swe:description>
                    <sml:time><gml:TimeInstant gml:id="start">
                        <gml:timePosition>2012-12-12</gml:timePosition>
                    </gml:TimeInstant>
                    </sml:time>                
                </sml:Event>
            </sml:event>
        </sml:EventList>        
    </sml:history>
   
    
    
    <sml:featuresOfInterest>
        <sml:FeatureList>
            <sml:feature xlink:href="http://www.ifremer.fr/tematres/vocab/index.php?tema=132" xlink:title="atmosphere">                
            </sml:feature>
        </sml:FeatureList>
    </sml:featuresOfInterest>
    
    <sml:inputs>
        <sml:InputList>
            <sml:input name="observed_property">
                <sml:ObservableProperty definition="">                  
                    <swe:description>wind intensity and direction</swe:description>
                </sml:ObservableProperty>                   
            </sml:input>
            <sml:input name="sampling_period">                               
                <swe:TimeRange>                    
                    <swe:description>3</swe:description>
                    <swe:uom xlink:href="http://www.qudt.org/qudt/owl/1.0.0/unit/Instances.html#Hour"/>
                </swe:TimeRange>                
            </sml:input>
        </sml:InputList>
    </sml:inputs>
           
    <sml:position>
        <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->        
        <!-- reference frame is the local frame defined in the hosting platform sensorML, absolute URI to be defined -->
        <!-- as recommended by SeaDataNet/CSIC                                                                       -->
        <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
        <swe:Vector referenceFrame="http:// .....#LOCAL_FRAME">
            <swe:coordinate name="x"><swe:Quantity>
                <swe:uom xlink:href="http://www.qudt.org/qudt/owl/1.0.0/unit/Instances.html#Meter"/>
                <swe:value>0</swe:value>
            </swe:Quantity>
                </swe:coordinate>
            <swe:coordinate name="y"><swe:Quantity>
                <swe:uom xlink:href="http://www.qudt.org/qudt/owl/1.0.0/unit/Instances.html#Meter"/>
                <swe:value>0</swe:value>
            </swe:Quantity>
            </swe:coordinate>
            <swe:coordinate name="z"><swe:Quantity>
                <swe:uom xlink:href="http://www.qudt.org/qudt/owl/1.0.0/unit/Instances.html#Meter"/>
                <swe:value>0</swe:value>
            </swe:Quantity>
            </swe:coordinate>
        </swe:Vector>             
    </sml:position>        

</sml:PhysicalSystem>
